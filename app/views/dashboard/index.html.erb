<h4>Filter</h4>
<%= search_form_for @search, url: root_path do |f| %>
  
  <div class="form-row">
    <div class="form-group col-md-5">
      <label for="inputEmail4">From Age</label>
      <%= f.text_field :age_gteq, class: "form-control", placeholder: "Gender" %>
    </div>
    <div class="form-group col-md-5">
      <label for="inputPassword4">To Age</label>
      <%= f.text_field :age_lteq, class: "form-control", placeholder: "country" %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail4">Gender</label>
    <%= f.text_field :gender_cont, class: "form-control", placeholder: "Gender" %>
  </div>

  <div class="form-group">
    <label for="inputPassword4">Country</label>
    <%= f.text_field :country_cont, class: "form-control", placeholder: "country" %>
  </div>

  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>
<br/>
<table class="table" id="users">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Age</th>
      <th scope="col">Gender</th>
      <th scope="col">Country</th>
    </tr>
  </thead>
  <tbody>
  	<% @users.each do |user| %>
  		<tr>
	      <th scope="row"><%= user.email %></th>
	      <td><%= user.first_name %></td>
	      <td><%= user.last_name %></td>
	      <td><%= user.age %></td>
	      <td><%= user.gender %></td>
	      <td><%= user.country %></td>
	    </tr>
  	<% end %>
  </tbody>
</table>
<%= will_paginate @users %>